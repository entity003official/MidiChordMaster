{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Android App",
			"type": "shell",
			"command": "./gradlew.bat",
			"args": [
				"assembleDebug"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "Build APK Only",
			"type": "shell",
			"command": "./gradlew.bat",
			"args": [
				"assembleDebug",
				"--info"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"isBackground": false,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			}
		},
		{
			"label": "Clean Project",
			"type": "shell",
			"command": "./gradlew.bat",
			"args": [
				"clean"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": []
		}
	]
}